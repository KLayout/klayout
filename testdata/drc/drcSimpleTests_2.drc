def self.expect_count(layer, c, hc, where)
  if layer.count != c 
    raise(where + ": Layer count #{layer.count} does not equal #{c}")
  end
  if layer.hier_count != hc 
    raise(where + ": Layer hier count #{layer.hier_count} does not equal #{c}")
  end
end

